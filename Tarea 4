#include <stdio.h>

int main() {
    printf("Nombre: César García\n");
    printf("Carné: 201404154\n");
    return 0;
}


# ============================================================
# 📁 Archivo: Dockerfile
# ============================================================

FROM gcc:latest

WORKDIR /usr/src/app

COPY . .

RUN gcc src/tarea4.c -o tarea4

CMD ["./tarea4"]


# ============================================================
# 📁 Archivo: Makefile
# ============================================================

IMAGE_NAME = led-c
CONTAINER_NAME = led_container

build:
	docker build -t $(IMAGE_NAME) .

run:
	docker run --name $(CONTAINER_NAME) --rm -it $(IMAGE_NAME)

ps:
	docker ps


